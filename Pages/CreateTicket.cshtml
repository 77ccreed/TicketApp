@page
@model CreateTicketModel
@{
  ViewData["Title"] = "Create Ticket";
}
<h2>Create Ticket</h2>
<form method="post" class="form-horizontal">
  <div class="form-group">
    <label asp-for="Ticket.Description" class="control-label">Description</label>
    <input asp-for="Ticket.Description" class="form-control" />
    <span asp-validation-for="Ticket.Description" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Ticket.ResolutionDeadline" class="control-label">Resolution deadline</label>
    <input asp-for="Ticket.ResolutionDeadline" type="datetime-local" class="form-control" />
    <span asp-validation-for="Ticket.ResolutionDeadline" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">Create</button>
</form>
